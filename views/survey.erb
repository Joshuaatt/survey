<h1><%= @survey.name %></h1>

<form action="/surveys/<%= @survey.id %>" method="post">
  <input type="text" name="prompt">
  <button type="submit">submit</button>
</form>

<% if @questions.any? %>
  <ul class="list-unstyled">
    <% @questions.each do |question| %>
      <li><%= question.prompt %></li>
    <% end %>
  </ul>
<% end %>
